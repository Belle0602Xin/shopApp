        },
        {
          "name": "Remove Product from Watchlist",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/watchlist/remove/1",
              "host": ["{{baseUrl}}"],
              "path": ["watchlist", "remove", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin APIs",
      "item": [
